<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>
        <solid android:color="@color/baseColor" />

        <corners android:bottomRightRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="3dp" android:topLeftRadius="3dp" />

        <stroke android:width="0.5dp" android:color="@color/baseColor" />
    </shape></item>
    <item android:state_checked="false"><shape>
        <solid android:color="#ffffffff" />

        <corners android:bottomRightRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />

        <stroke android:width="0.5dp" android:color="@color/baseColor" />
    </shape></item>

</selector>