<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:focusable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shihuaFrag_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="1dp"
            android:src="@drawable/tj_left_icon" />

        <ImageView
            android:id="@+id/shihuaFrag_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="2.5dp"
            android:paddingLeft="-13dp"
            android:paddingRight="-10dp"
            android:paddingTop="2.5dp"
            android:src="@drawable/add_friend" />

        <ImageView
            android:id="@+id/shihuaFrag_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/shihuaFrag_person"
            android:paddingBottom="1dp"
            android:paddingRight="-12dp"
            android:paddingTop="1dp"
            android:src="@drawable/sh_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"

            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="食话"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.group.newproject.views.LoadMoreListView
            android:id="@+id/shihuaFrag_Listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:headerDividersEnabled="false">

        </com.group.newproject.views.LoadMoreListView>
        <ImageView
            android:visibility="visible"
            android:id="@+id/shihuaFrag_goToTop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sh_gototop"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"

            />
        <ImageView
            android:visibility="visible"
            android:id="@+id/shihuaFrag_track"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sh_track"
            android:layout_above="@+id/shihuaFrag_goToTop"
            android:layout_alignLeft="@+id/shihuaFrag_goToTop"
            android:layout_alignStart="@+id/shihuaFrag_goToTop"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>



</LinearLayout>
