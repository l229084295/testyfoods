<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/serch_red_back"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/back_red"
       />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#55999999"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/serch_aty_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/topsearch_icon"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/serch_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="搜索你感兴趣的"
            android:background="@null"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/serch_aty_img"/>
        <ImageView
            android:id="@+id/serche_edittext_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search_del"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:textColor="#ffffffff"
        android:textSize="13sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:background="@drawable/login_shape"
       />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#55999999"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门搜索"
        android:textSize="13sp"
        android:textColor="#AA444444"/>
    <HorizontalScrollView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/serch_hot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下饭菜"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/search_hot_shape"/>
            <TextView
                android:id="@+id/serch_hot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="肉食"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_hot_shape"/>
            <TextView
                android:id="@+id/serch_hot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快手菜"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_hot_shape"/>
            <TextView
                android:id="@+id/serch_hot_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汤"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_hot_shape"/>
            <TextView
                android:id="@+id/serch_hot_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="虾"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_hot_shape"/>
            <TextView
                android:id="@+id/serch_hot_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="茄子"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_hot_shape"/>
            <TextView
                android:id="@+id/serch_hot_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应季蔬菜"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_hot_shape"/>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#55999999"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:id="@+id/serch_history_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史搜索"
            android:textSize="13sp"
            android:padding="15dp"
            android:textColor="#AA444444"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#88000000"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#55999999">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mic52"
        android:padding="10dp"/>
</RelativeLayout>

</LinearLayout>