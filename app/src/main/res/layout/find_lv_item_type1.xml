<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/find_lv_item_ty1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/f_type1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都现在最关注的菜谱"
            />
        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/f_type1_tag"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击更多"
            android:background="@drawable/find_tv_bg"
            android:padding="2dp"
            android:textColor="#97DAFA"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/f_type1_titlepic"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/f_type1_titlepic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/f_type1_title1"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="鱼香肉丝"
                    />
                <LinearLayout
                    android:id="@+id/f_type1_starContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    />
                <TextView
                    android:id="@+id/f_type1_step"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/fav_nd_icon_36"
                    android:text="8步15分钟"
                    />
                <TextView
                    android:id="@+id/f_type1_kouwei"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/fav_sx_icon_36"
                    android:text="鱼香味炒"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
