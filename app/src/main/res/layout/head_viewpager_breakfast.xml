<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/home_head_viewpager_layout"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/imageview_bg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/tj_recipe_mask"
            />
        <TextView
            android:id="@+id/tips1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小鸡替你啄走床气，护你周全"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_alignRight="@id/imageview1"
            android:layout_marginRight="10dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小鸡烧果子"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_above="@+id/tips1"
            android:layout_alignRight="@+id/tips1"
            android:layout_alignEnd="@+id/tips1" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-15dp"
        android:layout_below="@id/layout1">

        <ImageView
            android:id="@+id/imageview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/imageview_bg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/tj_recipe_mask"
            />
        <TextView
            android:id="@+id/tips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小鸡替你啄走床气，护你周全"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@id/imageview2"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小鸡烧果子"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_above="@+id/tips2"
            android:layout_alignLeft="@+id/tips2"
            android:layout_alignStart="@+id/tips2" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-15dp"
        android:layout_below="@id/layout2">

        <ImageView
            android:id="@+id/imageview3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/imageview_bg3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/tj_recipe_mask"
            />
        <TextView
            android:id="@+id/tips3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小鸡替你啄走床气，护你周全"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_alignRight="@id/imageview3"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小鸡烧果子"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_above="@+id/tips3"
            android:layout_alignRight="@+id/tips3"
            android:layout_alignEnd="@+id/tips3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:text="早餐"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainTips"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/mainTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="传说中别人家的早餐"
        android:gravity="center"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>