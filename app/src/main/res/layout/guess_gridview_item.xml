<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    >

    <RelativeLayout
        android:id="@+id/guess_item1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/guess_item_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/tj_recipe_mask"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/guess_item_img1"
            android:layout_alignTop="@id/guess_item_img1"
            android:scaleType="fitXY"
            android:background="@drawable/tj_recipe_mask"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/guess_item_img1"
            android:layout_alignTop="@id/guess_item_img1"
            android:scaleType="fitXY"
            android:background="@drawable/round_bg"/>

        <TextView
            android:id="@+id/guess_item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/guess_item_img1"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:text="测试"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/guess_item2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/guess_item_img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/tj_recipe_mask"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/guess_item_img2"
            android:layout_alignTop="@id/guess_item_img2"
            android:scaleType="fitXY"
            android:background="@drawable/tj_recipe_mask"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/guess_item_img2"
            android:layout_alignTop="@id/guess_item_img2"
            android:scaleType="fitXY"
            android:background="@drawable/round_bg"/>

        <TextView
            android:id="@+id/guess_item_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/guess_item_img2"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:text="测试"/>
    </RelativeLayout>


</LinearLayout>