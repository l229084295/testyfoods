<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/login_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="取消"
    android:textColor="#ff0000"
    android:textSize="16sp"
    android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录账号"
            android:textSize="21sp"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">
            <EditText
                android:id="@+id/login_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号/邮箱/昵称"
                android:textSize="13sp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#44000000"
                android:layout_marginTop="10dp"
                android:layout_below="@id/login_edittext"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/login_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:textSize="13sp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#44000000"
                android:layout_marginTop="10dp"
                android:layout_below="@id/login_password_edittext"/>
            <ImageView
                android:id="@+id/login_password_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:clickable="true"
                android:src="@drawable/login_password_selector"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:padding="10dp"
            android:textColor="#ffffffff"
            android:background="@drawable/login_shape"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:textColor="#ff0000"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:padding="10dp">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0.2dp"
            android:background="#44000000"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐登录方式"
            android:textColor="#bb000000"
            android:textSize="11sp"
            android:padding="8dp"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0.2dp"
            android:background="#44000000"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/bind_weixin"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/bind_qq"/>
        <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/bind_sina"/>

    </LinearLayout>

</LinearLayout>